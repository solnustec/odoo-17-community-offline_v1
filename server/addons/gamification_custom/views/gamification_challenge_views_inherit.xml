<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    Vista Form completa para gamification.challenge
    No hereda de ninguna vista para evitar errores en bases de datos restauradas
    -->
    <record id="view_gamification_challenge_form_custom" model="ir.ui.view">
        <field name="name">gamification.challenge.form.custom</field>
        <field name="model">gamification.challenge</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <form string="Desafio">
                <header>
                    <button name="action_start" string="Iniciar" type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_check" string="Actualizar Metas" type="object"
                            invisible="state != 'inprogress'"/>
                    <button name="action_report_progress" type="object"
                            string="Descargar reporte" class="btn-secondary"
                            invisible="state == 'draft'"/>
                    <button name="action_archive_goals_to_history"
                            type="object"
                            string="Archivar al Historial"
                            class="btn-secondary"
                            icon="fa-archive"
                            confirm="Esta seguro de archivar todas las metas de este desafio al historial?"
                            groups="gamification_custom.group_gamification_manager"
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,inprogress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_history"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-history">
                            <field name="history_count" widget="statinfo" string="Historial"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Nombre del desafio"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Configuracion">
                            <field name="manager_id" widget="many2one_avatar_user"/>
                            <field name="user_domain" widget="domain"
                                   options="{'model': 'res.users', 'in_dialog': True}"/>
                            <field name="period" invisible="1"/>
                            <field name="visibility_mode"/>
                        </group>
                        <group string="Periodo">
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group string="Filtro por Categoria de Departamento">
                        <field name="department_category_ids" widget="many2many_tags"/>
                        <field name="department_ids" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Metas" name="goals">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="definition_id"/>
                                    <field name="target_goal"/>
                                    <field name="sequence" widget="handle"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Usuarios" name="users">
                            <field name="user_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Recompensas" name="rewards">
                            <group>
                                <group string="Insignia al alcanzar">
                                    <field name="reward_id"/>
                                    <field name="reward_first_id"/>
                                    <field name="reward_second_id"/>
                                    <field name="reward_third_id"/>
                                </group>
                                <group string="Opciones de reporte">
                                    <field name="report_message_frequency"/>
                                    <field name="report_message_group_id"
                                           invisible="report_message_frequency == 'never'"/>
                                    <field name="report_template_id"
                                           invisible="report_message_frequency == 'never'"/>
                                </group>
                            </group>
                        </page>
                        <page string="Descripcion" name="description">
                            <field name="description" placeholder="Descripcion del desafio..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Tree personalizada -->
    <record id="view_gamification_challenge_tree_custom" model="ir.ui.view">
        <field name="name">gamification.challenge.tree.custom</field>
        <field name="model">gamification.challenge</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <tree string="Desafios" decoration-info="state == 'draft'"
                  decoration-success="state == 'inprogress'"
                  decoration-muted="state == 'done'">
                <field name="name"/>
                <field name="manager_id" widget="many2one_avatar_user"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'inprogress'"
                       decoration-muted="state == 'done'"/>
            </tree>
        </field>
    </record>

    <!-- Accion para ver desafios con nuestras vistas personalizadas -->
    <record id="action_gamification_challenge_custom" model="ir.actions.act_window">
        <field name="name">Desafios</field>
        <field name="res_model">gamification.challenge</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_gamification_challenge_tree_custom')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_gamification_challenge_form_custom')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo desafio
            </p>
        </field>
    </record>
</odoo>
