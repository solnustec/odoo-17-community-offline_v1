<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sales_order_app_mobile" model="ir.ui.view">
        <field name="name">sale.order.app.mobile.search.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <filter name="my_sale_orders_filter" position="before">
                <filter string="Confirmadas" name="order_confirmed" domain="[('state', '=', 'sale')]"/>
                <filter string="Pendientes de pago" name="order_unpaid" domain="[('state', '=', 'sent')]"/>
                <filter string="Abandonadas" name="order_abandoned" domain="[('is_abandoned_cart', '=', True)]"/>
                <separator/>
                <filter string="Fecha" name="order_date" date="date_order"/>
                <separator/>
                <filter string="App Móvil" name="from_website" domain="[('is_order_app', '=', True)]"/>
                <separator/>
                <!-- Dashboard filter - used by context -->
                <filter string="Last Week" invisible="1" name="week"
                        domain="[('date_order','&gt;', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last Month" invisible="1" name="month"
                        domain="[('date_order','&gt;', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last Year" invisible="1" name="year"
                        domain="[('date_order','&gt;', (context_today() - datetime.timedelta(days=365)).strftime('%Y-%m-%d'))]"/>
            </filter>
        </field>
    </record>
    <record id="action_sale_order_app_mobile_view" model="ir.actions.act_window">
        <field name="name">Ordenes App móvil</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form,kanban,activity</field>
        <field name="domain">[('is_order_app', '=', True),]</field>
        <field name="context">{ 'is_order_app': True,}</field>
        <field name="search_view_id" ref="view_sales_order_app_mobile"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                There is no confirmed order from the website
            </p>
        </field>
    </record>


    <!--                <record id="action_sale_order_app__mobile_view" model="ir.actions.act_window">-->
    <!--                    <field name="name">App Orders</field>-->
    <!--                    <field name="res_model">sale.order</field>-->
    <!--                    <field name="view_mode">tree,form</field>-->
    <!--                    <field name="view_id" ref="view_sale_order_app_mobile_tree"/>-->
    <!--                </record>-->
    <menuitem
            id="menu_sale_order_app_mobile_menu"
            sequence="1"
            name="Ordenes App Móvil"
            parent="website_sale.menu_orders"
            action="action_sale_order_app_mobile_view"/>


</odoo>