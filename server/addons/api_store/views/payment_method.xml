<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_method_form_mobile" model="ir.ui.view">
        <field name="name">payment.method.form.mobile</field>
        <field name="model">payment.method</field>
        <field name="inherit_id" ref="payment.payment_method_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='configuration']" position="after">
                <page string="Mobile Configuration" name="mobile_configuration">
                    <group>
                        <field name="is_mobile_enabled"/>
                        <field name="prod_mode"/>
                        <field name="mobile_dev_config" widget="text"/>
                        <field name="mobile_prod_config" widget="text"
                        />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>