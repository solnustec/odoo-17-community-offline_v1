<odoo>
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_ids']" position="after">
                <field name="ecommerce_discount" string="Descuento de Ecommerce"/>
            </xpath>
            <xpath expr="//field[@name='taxes_id']" position="before">
                <field name="price_with_discount" />
                <field name="price_with_tax" />
            </xpath>
        </field>
    </record>
</odoo>
