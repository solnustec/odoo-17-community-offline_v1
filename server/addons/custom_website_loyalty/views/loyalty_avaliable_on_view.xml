<odoo>
    <record id="loyalty_program_view_form_inherit_sale_loyalty" model="ir.ui.view">
        <field name="name">loyalty.program.view.form.inherit.sale.loyalty</field>
        <field name="model">loyalty.program</field>
        <field name="inherit_id" ref="loyalty.loyalty_program_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='o_loyalty_program_availabilities']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//label[@for='ecommerce_ok']" position="attributes">
                <attribute name="string">Canales Digitales</attribute>
            </xpath>
            <xpath expr="//field[@name='sale_ok']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='sale_ok']" position="attributes">
                <attribute name="class">d-none</attribute>
            </xpath>
        </field>
    </record>
</odoo>


