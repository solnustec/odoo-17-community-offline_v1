<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
  <t t-name="ClosePosPopup" t-inherit="point_of_sale.ClosePosPopup" t-inherit-mode="extension" owl="1">
    <xpath expr="//div//main//div[hasclass('payment-methods-overview')]" position="after">
        <div style="text-align:left; border-top: 1px dashed #eee; margin: 1rem 0">
            <b class="mr-2 mt-4">Crédito</b>
            <div t-foreach="Object.keys(props.customer_payments)" t-as="payment" t-key="payment" class="ml-2">
                <b t-esc="payment" style="color: red"/> → <t t-esc="env.utils.formatCurrency(props.customer_payments[payment])"/>
            </div>

        </div>
    </xpath>
  </t>
</templates>