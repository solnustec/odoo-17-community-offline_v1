<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_lot_form_inherit" model="ir.ui.view">
            <field name="name">stock.lot.form.inherit.conection</field>
            <field name="model">stock.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <field name="expiration_date" position="replace">
                    <field name="expiration_date_date"/>
                    <field name="expiration_date" invisible="1"/>
                </field>
                <field name="removal_date" position="replace">
                    <field name="removal_date_date"/>
                    <field name="removal_date" invisible="1"/>
                </field>
                <field name="use_date" position="replace">
                    <field name="use_date_date"/>
                    <field name="use_date" invisible="1"/>
                </field>
                <field name="alert_date" position="replace">
                    <field name="alert_date_date"/>
                    <field name="alert_date" invisible="1"/>
                </field>
            </field>
        </record>

        <record id="view_product_lot_view_kanban" model="ir.ui.view">
            <field name="name">stock.production.lot.product.expiry</field>
            <field name="model">stock.lot</field>
            <field name="inherit_id" ref="product_expiry.view_production_lot_view_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='expiration_date']" position="attributes">
                    <attribute name="for">expiration_date_date</attribute>
                </xpath>
                <xpath expr="//field[@name='expiration_date'][contains(@class, 'ms-2')]" position="replace">
                    <field class="ms-2" name="expiration_date_date"/>
                </xpath>
                <xpath expr="//label[@for='removal_date']" position="attributes">
                    <attribute name="for">removal_date_date</attribute>
                </xpath>
                <xpath expr="//field[@name='removal_date']" position="replace">
                    <field class="ms-2" name="removal_date_date"/>
                </xpath>
            </field>
        </record>

        <record id="product_expiry.view_stock_move_line_operation_tree_expiry" model="ir.ui.view">
            <field name="name">stock.move.line.inherit.tree</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_name']" position="after" >
                    <field name="is_expired" column_invisible="True"/>
                    <field name="picking_type_use_existing_lots" column_invisible="True"/>
                    <field name="expiration_date" force_save="1" column_invisible="1"/>
                    <field name="expiration_date_date" force_save="1" column_invisible="not parent.use_expiration_date or parent.picking_code != 'incoming'" readonly="picking_type_use_existing_lots" decoration-danger="is_expired"/>
                </xpath>
            </field>
        </record>

        <record id="product_expiry.view_stock_move_line_detailed_operation_tree_expiry" model="ir.ui.view">
            <field name="name">stock.move.line.operations.inherit.tree</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_name']" position="after">
                    <field name="is_expired" column_invisible="True"/>
                    <field name="picking_type_use_existing_lots" column_invisible="True"/>
                    <field name="tracking" column_invisible="True"/>
                    <field name="expiration_date" force_save="1" column_invisible="1"/>
                    <field name="expiration_date_date" force_save="1" column_invisible="context.get('picking_code') != 'incoming'" invisible="tracking == 'none'" readonly="picking_type_use_existing_lots" decoration-danger="is_expired"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
