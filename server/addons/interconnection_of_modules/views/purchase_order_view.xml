<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_editable_totals" model="ir.ui.view">
        <field name="name">purchase.order.form.editable.totals</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <!-- Hacer price_subtotal editable en el tree -->
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_subtotal']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
            <!-- Hacer price_total editable en el tree -->
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_total']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
            <!-- Agregar price_tax despuÃ©s de price_subtotal -->
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_subtotal']" position="after">
                <field name="price_tax" string="Impuesto" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>