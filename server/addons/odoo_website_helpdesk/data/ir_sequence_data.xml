<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <!-- Definir una secuencia para los tickets del servicio de asistencia -->
        <record id="sequence_help_ticket_seq" model="ir.sequence">
            <field name="name">Soporte técnico</field>
            <field name="code">ticket.helpdesk</field>
            <field name="prefix">TKT</field>
            <field name="padding">5</field>
            <field eval="1" name="number_increment"/>
            <field eval="False" name="company_id"/>
        </record>

        <!-- Definir una secuencia para las facturas de los tickets del servicio de asistencia -->
        <record id="sequence_help_ticket_inv_seq" model="ir.sequence">
            <field name="name">Factura de Soporte técnico</field>
            <field name="code">ticket.invoice</field>
            <field name="prefix">INV/TKT/%(year)s/</field>
            <field name="padding">3</field>
            <field eval="1" name="number_increment"/>
            <field eval="False" name="company_id"/>
        </record>
    </data>
</odoo>
