<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Plantilla de correo para respuesta de Helpdesk -->
    <record id="helpdesk_replay_email_template" model="mail.template">
        <field name="name">Plantilla de Respuesta del Soporte técnico</field>
        <field name="model_id" ref="odoo_website_helpdesk.model_ticket_helpdesk"/>
        <field name="auto_delete" eval="True"/>
        <field name="subject">Respuesta a {{ object.name }}</field>
        <field name="body_html" type="html">
            <div class="container">
                <h4 style="text-align:center">Respuesta del Soporte técnico</h4>
                <div style="min-height:30vh;">mensaje........</div>
                <t t-set="base_url"
                   t-value="request.env['ir.config_parameter'].sudo().get_param('web.base.url')"/>
                <h6>
                    <a t-attf-href="{{base_url}}/my/tickets/{{object.id}}"
                       class="btn btn-primary">Ver ticket
                    </a>
                </h6>
                <table class="table table-light" width="100%">
                    <tbody>
                        <tr>
                            <th>Nombre</th>
                            <td>
                                <t t-if="object.assigned_user_id">
                                    <t t-esc="object.assigned_user_id.name"/>
                                </t>
                                <t t-else="">nombre de usuario</t>
                                <t t-esc="base_url"/>
                            </td>
                        </tr>
                        <tr>
                            <th>Equipo asignado</th>
                            <td>
                                <t t-if="object.team_id">
                                    <t t-esc="object.team_id.name"/>
                                </t>
                                <t t-else="">nombre del equipo</t>
                            </td>
                        </tr>
                        <tr>
                            <th>Respondido el</th>
                            <td>
                                <t t-set="date" t-value="(datetime.date.today())"/>
                                <t t-esc="date"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </field>
    </record>
</odoo>
