<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <!-- Tarea programada (cron) para cerrar automáticamente los tickets del servicio de asistencia -->
        <record id="auto_close_ticket" model="ir.cron">
            <field name="name">Cierre automático de tickets</field>
            <field name="model_id" ref="odoo_website_helpdesk.model_ticket_helpdesk"/>
            <field name="state">code</field>
            <field name="code">model.auto_close_ticket()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>
