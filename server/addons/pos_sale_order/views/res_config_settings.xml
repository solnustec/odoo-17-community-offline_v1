<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Record for creating new fields in res configuration settings-->
    <record id="res_config_settings_sale_order_view_form" model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.sale.order.from.pos
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
               ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='restaurant_section']" position="after">
                <block title="Ordenes de Entrega">
                    <div class="col-4">
                        <div class="o_setting_left_pane">
                            <field name="sync_data"
                                   readonly="False"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sync_data"/>
                            <div class="text-muted">
                                Puedes activar o desactivar la sincronizaci√≥n de datos, con el sistema anterior
                            </div>
                        </div>

                    </div>
                </block>
            </xpath>
        </field>
    </record>
</odoo>