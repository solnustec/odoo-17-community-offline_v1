<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Secuencia para cola de sincronización -->
        <record id="seq_pos_sync_queue" model="ir.sequence">
            <field name="name">POS Sync Queue</field>
            <field name="code">pos.sync.queue</field>
            <field name="prefix">SYNC/</field>
            <field name="padding">6</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Parámetros del sistema -->
        <record id="config_param_sync_enabled" model="ir.config_parameter">
            <field name="key">pos_offline_sync.enabled</field>
            <field name="value">True</field>
        </record>

        <record id="config_param_sync_batch_size" model="ir.config_parameter">
            <field name="key">pos_offline_sync.default_batch_size</field>
            <field name="value">100</field>
        </record>

        <record id="config_param_sync_retry_attempts" model="ir.config_parameter">
            <field name="key">pos_offline_sync.default_retry_attempts</field>
            <field name="value">3</field>
        </record>

        <record id="config_param_sync_timeout" model="ir.config_parameter">
            <field name="key">pos_offline_sync.default_timeout</field>
            <field name="value">30</field>
        </record>

        <record id="config_param_cleanup_days" model="ir.config_parameter">
            <field name="key">pos_offline_sync.cleanup_synced_days</field>
            <field name="value">30</field>
        </record>

        <record id="config_param_log_retention_days" model="ir.config_parameter">
            <field name="key">pos_offline_sync.log_retention_days</field>
            <field name="value">90</field>
        </record>
    </data>
</odoo>
