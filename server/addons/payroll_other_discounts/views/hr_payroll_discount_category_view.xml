<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_payroll_discount_category_tree" model="ir.ui.view">
            <field name="name">hr.payroll.discounts.category.form</field>
            <field name="model">hr.payroll.discounts.category</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="status"/>
                    </group>
                    <div class="oe_chatter mt-5">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>

            </field>
        </record>
        <record id="hr_payroll_discount_category_tree_view" model="ir.ui.view">
            <field name="name">Tipos de Descuento</field>
            <field name="model">hr.payroll.discounts.category</field>
            <field name="arch" type="xml">
                <tree string="Tipos de Descuento">
                    <field name="name"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="hr_payroll_discount_category_action" model="ir.actions.act_window">
            <field name="name">Tipos Descuentos</field>
            <field name="res_model">hr.payroll.discounts.category</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem
                id="hr_payroll_discount_category_report_menu"
                name="Tipos de Descuento"
                action="hr_payroll_discount_category_action"
                parent="hr.hr_menu_hr_reports"
                sequence="15"
                />

    </data>
</odoo>