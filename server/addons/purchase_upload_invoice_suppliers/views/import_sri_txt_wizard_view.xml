<odoo>
    <!-- Vista del wizard -->
    <record id="view_import_sri_txt_wizard_form" model="ir.ui.view">
        <field name="name">import.sri.txt.wizard.form</field>
        <field name="model">import.sri.txt.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Facturas SRI">
                <group>
                    <field name="file" filename="filename"/>
                    <field name="filename" invisible="1"/>
                </group>
                <footer>
                    <button string="Importar" type="object" name="action_import" class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n de ventana -->
    <record id="action_import_sri_txt_wizard" model="ir.actions.act_window">
        <field name="name">Importar Facturas SRI</field>
        <field name="res_model">import.sri.txt.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
