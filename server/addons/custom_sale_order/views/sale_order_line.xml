<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_form_inherit_cost_tree" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.cost.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
                <field name="cost_price" widget="monetary" string="Costo Unitario"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='cost_price']" position="after">
                <field name="useful" widget="percent" string="%Util"/>
            </xpath>
        </field>
    </record>
</odoo>
