<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_warehouse_tree_inherit" model="ir.ui.view">
            <field name="name">replenishment_inventory.stock.warehouse.tree</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="replenishment_based_on_sales" optional="hide" />
                    <field name="replenishment_based_on_transfers" optional="hide" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>