<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Formato de papel -->
        <record model="report.paperformat" id="vacation_report_paperformat">
            <field name="name">Vacaciones Report Paperformat</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">15</field>
            <field name="margin_right">3</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">3</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">10</field>
            <field name="dpi">90</field>
        </record>

        <!-- AcciÃ³n del informe -->
        <record id="action_vacation_report" model="ir.actions.report">
            <field name="name">Reporte de Vacaciones</field>
            <field name="model">hr.leave</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_holidays.vacation_report</field>
            <field name="report_file">custom_holidays.vacation_report</field>
            <field name="paperformat_id" ref="vacation_report_paperformat"/>
            <field name="print_report_name">'Reporte de Vacaciones - %s' % (object.employee_id.name)</field>
            <field name="binding_model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
