<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="vacation_report_temp_doc">
        <t t-call="web.basic_layout">
            <div class="page" style="padding: 20px; font-family: Arial; width: 70%; margin: 0;">

                <!-- Encabezado -->
                <div style="border: 1px solid #000; padding: 15px; margin-bottom: 20px; text-align: center;">
                    <div style="font-size: 30px; font-weight: bold; margin-bottom: 18px;">FARMACUX CIA LTDA</div>
                    <div style="font-size: 22px; font-weight: bold;">Vacaciones del personal</div>
                </div>

                <!-- Datos del Empleado -->
                <div style="border: 1px solid #000; padding: 15px; margin-bottom: 20px;">
                    <p style="margin: 0;">
                        <strong>Nombres y apellidos: </strong>
                        <t t-esc="doc.employee_id.name"/>
                    </p>
                </div>

                <!-- Tabla de Vacaciones -->
                <table style="width: 100%; margin-bottom: 25px;">
                    <thead>
                        <tr>
                            <th style="border: 1px solid #000; padding: 8px;">DÃ­as</th>
                            <th style="border: 1px solid #000; padding: 8px;">Observaciones</th>
                            <th style="border: 1px solid #000; padding: 8px;">Fecha Salida</th>
                            <th style="border: 1px solid #000; padding: 8px;">Fecha Fin VAC</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="border: 1px solid #000; padding: 8px; text-align: center;">
                                <t t-esc="int(doc.number_of_days_display) or '0'"/>
                            </td>
                            <td style="border: 1px solid #000; padding: 8px;">
                                <t t-esc="doc.name or 'Sin observaciones'"/>
                            </td>
                            <td style="border: 1px solid #000; padding: 8px; text-align: center;">
                                <t t-esc="doc.request_date_from.strftime('%d/%m/%Y')"/>
                            </td>
                            <td style="border: 1px solid #000; padding: 8px; text-align: center;">
                                <t t-esc="doc.request_date_to.strftime('%d/%m/%Y')"/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <!-- Firmas -->
                <div style="margin-top: 30px;">
                    <table style="width: 100%;" border="0">
                        <tr>
                            <!-- Beneficiario -->
                            <td style="width: 33.33%; text-align: center; padding: 0 5px;">
                                <div style="border-bottom: 1px solid #000; height: 60px; margin: 0 auto 10px; width: 80%;"></div>
                                <span style="display: block; margin-bottom: 5px;">BENEFICIARIO</span>
                            </td>
                            <!-- Jefe Inmediato -->
                            <td style="width: 33.33%; text-align: center; padding: 0 5px;">
                                <div style="border-bottom: 1px solid #000; height: 60px; margin: 0 auto 10px; width: 80%;"></div>
                                <span style="display: block; margin-bottom: 5px;">JEFE INMEDIATO</span>
                            </td>
                            <!-- Talento Humano -->
                            <td style="width: 33.33%; text-align: center; padding: 0 5px;">
                                <div style="border-bottom: 1px solid #000; height: 60px; margin: 0 auto 10px; width: 80%;"></div>
                                <span style="display: block; margin-bottom: 5px;">TALENTO HUMANO</span>
                            </td>
                        </tr>
                    </table>
                </div>

            </div>
        </t>
    </template>

    <template id="vacation_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="custom_holidays.vacation_report_temp_doc"/>
            </t>
        </t>
    </template>
</odoo>