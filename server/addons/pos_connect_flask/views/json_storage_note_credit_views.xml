<odoo>
    <!-- Vista de formulario para JSON Storage -->
    <record id="view_json_note_credit_form" model="ir.ui.view">
        <field name="name">json.note.credit.form</field>
        <field name="model">json.note.credit</field>
        <field name="arch" type="xml">
            <form string="Registros Notas de credito">
                <sheet>
                    <group>
                        <field name="json_data" widget="monospaced" placeholder="JSON Data"/>
                        <field name="date_invoices"/>
                        <field name="create_date" readonly="1"/>
                        <field name="id_point_of_sale"/>
                        <field name="sync_date"/>
                        <field name="db_key"/>
                        <field name="sent"/>
                        <field name="is_access_key"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de árbol para JSON Storage -->
    <record id="view_json_note_credit_tree" model="ir.ui.view">
        <field name="name">json.note.credit.tree</field>
        <field name="model">json.note.credit</field>
        <field name="arch" type="xml">
            <tree string="Registro de Notas de credito">
                <field name="create_date" readonly="1"/>
                <field name="date_invoices"/>
                <field name="id_point_of_sale"/>
                <field name="sync_date"/>
                <field name="db_key"/>
                <field name="sent"/>
                <field name="is_access_key"/>
            </tree>
        </field>
    </record>

    <!-- Acción para JSON Storage -->
    <record id="action_json_note_credit" model="ir.actions.act_window">
        <field name="name">Registro Notas de credito</field>
        <field name="res_model">json.note.credit</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú para JSON Storage -->
    <menuitem id="menu_json_note_credit"
              name="Registro Notas de credito"
              parent="point_of_sale.menu_point_config_product"
              action="action_json_note_credit"/>
</odoo>
