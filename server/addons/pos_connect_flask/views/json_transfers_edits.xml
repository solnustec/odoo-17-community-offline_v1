<odoo>
    <!-- Vista de formulario para JSON Transfers Edits -->
    <record id="view_json_pos_transfers_edits_form" model="ir.ui.view">
        <field name="name">json.pos.transfers.edits.form</field>
        <field name="model">json.pos.transfers.edits</field>
        <field name="arch" type="xml">
            <form string="Registro Transferencias (Borrador)">
                <sheet>
                    <group>
                        <field name="json_data" widget="monospaced" placeholder="JSON Data"/>
                        <field name="stock_picking_id" readonly="1"/>
                        <field name="point_of_sale_series" readonly="1"/>
                        <field name="external_id" readonly="1"/>
                        <field name="sync_date" readonly="1"/>
                        <field name="create_date" readonly="1"/>
                        <field name="db_key"/>
                        <field name="sent"/>
                        <field name="employee"/>
                        <field name="origin"/>
                        <field name="destin"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de árbol para JSON Transfers Edits -->
    <record id="view_json_pos_transfers_edits_tree" model="ir.ui.view">
        <field name="name">json.pos.transfers.edits.tree</field>
        <field name="model">json.pos.transfers.edits</field>
        <field name="arch" type="xml">
            <tree string="Registro Transferencias (Borrador)">
                <field name="employee" readonly="1"/>
                <field name="stock_picking_id"/>
                <field name="create_date" readonly="1"/>
                <field name="external_id"/>
                <field name="sync_date"/>
                <field name="db_key"/>
                <field name="sent"/>
            </tree>
        </field>
    </record>

    <!-- Acción para JSON Transfers Edits -->
    <record id="action_json_transfers_edits_storage" model="ir.actions.act_window">
        <field name="name">Registro Transferencias (Borrador)</field>
        <field name="res_model">json.pos.transfers.edits</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú para JSON Transfers Edits -->
    <menuitem id="menu_json_transfers_edits_storage"
              name="Registro Transferencias (Borrador)"
              parent="point_of_sale.menu_point_config_product"
              action="action_json_transfers_edits_storage"/>
</odoo>
