<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="HelpDesk_Dashboard" owl="1">
        <div class="helpdesk_dashboards">
            <div class="container-fluid helpdesk_dashboard_main">
                <t t-call="DashBoardHelpDesk"/>
            </div>
        </div>
    </t>
    <t t-name="DashBoardHelpDesk">
        <link rel="stylesheet" href="/odoo_website_helpdesk_dashboard/static/src/css/dashboard.css"/>
        <style>
            .ticket-cards {
                font-family: Arial, sans-serif;
                display: flex;
                flex-direction: column;
                align-items: stretch;
                padding: 15px;
                background-color: #f9f9f9;
                height: 100%;
                box-sizing: border-box;
            }

            .ticket-cards .dashboard-row {
                display: flex;
                gap: 10px;
                margin-bottom: 10px;
                width: 100%;
            }

            .ticket-cards .dashboard-row:nth-child(1) .card.small {
                flex: 1 1 calc((100% - 20px) / 3); /* 3 cards with gaps */
            }

            .ticket-cards .dashboard-row:nth-child(2) .card.large {
                flex: 1 1 calc((100% - 10px) / 2); /* 2 cards with gap */
            }

            .ticket-cards .dashboard-row.full-width {
                justify-content: space-between;
            }

            .ticket-cards .card {
                height: 140px;
                border: 1px solid #004aad;
                border-radius: 10px;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                text-align: center;
                cursor: pointer;
                background-color: white;
                transition: transform 0.2s ease, box-shadow 0.2s ease;
                box-sizing: border-box;
            }

            .ticket-cards .card:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.05);
            }

            .ticket-cards .icon-circle {
                width: 45px;
                height: 45px;
                border-radius: 50%;
                display: flex;
                justify-content: center;
                align-items: center;
                margin-bottom: 6px;
            }

            .ticket-cards .icon {
                font-size: 22px;
                color: #004aad;
            }

            .ticket-cards .count {
                font-size: 26px;
                font-weight: bold;
                color: #004aad;
                margin-bottom: 4px;
            }

            .ticket-cards .label {
                font-size: 13px;
                color: #004aad;
                font-weight: bold;
            }

            .main-dashboard-layout {
                display: flex;
                flex-wrap: nowrap;
                gap: 15px;
                width: 100%;
                min-height: 500px; /* Ensure enough vertical space */
                box-sizing: border-box;
            }

            .main-dashboard-layout > .col-6 {
                flex: 1 0 50%; /* Strict 50% width */
                max-width: 50%;
                display: flex;
                flex-direction: column;
                padding: 0 10px;
                box-sizing: border-box;
            }

            .main-right-column {
                display: flex;
                flex-direction: column;
                gap: 15px;
                height: 100%;
            }

            .ticket_box, .leads_month_pie_div {
                flex: 1 0 0; /* Equal vertical distribution */
                padding: 15px;
                background-color: white;
                border-radius: 8px;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
                box-sizing: border-box;
                min-height: 200px;
                display: flex;
                flex-direction: column;
            }

            .ticket_box .priority-content {
                flex-grow: 1;
            }

            .leads_month_pie_div .graph_canvas {
                flex-grow: 1;
                height: 160px;
            }

            .ticket_box .text-align {
                padding: 5px 0;
            }

            .ticket_box .line {
                font-size: 12px;
                margin-bottom: 3px;
                cursor: pointer;
            }

            .graph_canvas canvas {
                max-height: 160px;
                width: 100% !important;
            }

            .section-header {
                font-size: 1.6em;
                color: #4a5c9a;
                margin-bottom: 15px;
            }

            /* Responsiveness */
            @media (max-width: 767px) {
                .main-dashboard-layout {
                    flex-direction: column;
                }
                .main-dashboard-layout > .col-6 {
                    flex: 1 0 100%;
                    max-width: 100%;
                }
                .main-right-column {
                    gap: 10px;
                }
                .ticket-cards .dashboard-row:nth-child(1) .card.small,
                .ticket-cards .dashboard-row:nth-child(2) .card.large {
                    flex: 1 1 100%;
                }
            }
        </style>
        <div class="row main-section mt-4" t-ref="helpDeskDashboard">
            <h2 class="section-header">HelpDesk Dashboard</h2>

            <!-- Filter Section -->
            <div class="col-12 mb-3">
                <div class="card card-shadow p-2">
                    <h3 class="mb-2">Filtros</h3>
                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">Rango de Fechas - Creaci√≥n de Ticket</label>
                            <div class="input-group">
                                <input type="date" class="form-control" id="date_start" placeholder="Fecha Inicio"/>
                                <span class="input-group-text">a</span>
                                <input type="date" class="form-control" id="date_end" placeholder="Fecha Fin"/>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Usuario Asignado</label>
                            <select class="form-control" id="assigned_user">
                                <option value="">Todos</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Cliente</label>
                            <select class="form-control" id="client">
                                <option value="">Todos</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <button class="btn btn-primary" t-on-click="applyFilters">Aplicar Filtros</button>
                            <button class="btn btn-secondary ms-2" t-on-click="resetFilters">Restablecer</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Dashboard Layout -->
            <div class="row main-dashboard-layout">
                <!-- Left Column: Card Container -->
                <div class="col-6">
                    <div class="helpdesk-card-container ticket-cards">
                        <!-- Row 1 (3 small cards) -->
                        <div class="dashboard-row">
                            <div class="card small helpdesk inbox_tickets" t-on-click="tickets_inbox">
                                <div class="icon-circle" style="background-color: #d7e3f3;">
                                    <i class="fa fa-bell icon" aria-label="Nuevos Tickets"></i>
                                </div>
                                <div class="count" id="inbox_count"></div>
                                <div class="label">Tickets Nuevos</div>
                            </div>
                            <div class="card small helpdesk inprogress_tickets" t-on-click="tickets_inprogress">
                                <div class="icon-circle" style="background-color: #fff6c9;">
                                    <i class="fa fa-spinner icon" aria-label="Tickets en Curso"></i>
                                </div>
                                <div class="count" id="inprogress_count"></div>
                                <div class="label">Tickets en Curso</div>
                            </div>
                            <div class="card small helpdesk wait_tickets" t-on-click="tickets_wait">
                                <div class="icon-circle" style="background-color: #eae8fd;">
                                    <i class="fa fa-pause-circle icon" aria-label="Tickets en Espera"></i>
                                </div>
                                <div class="count" id="wait_count"></div>
                                <div class="label">Tickets en Espera</div>
                            </div>
                        </div>

                        <!-- Row 2 (2 large cards) -->
                        <div class="dashboard-row full-width">
                            <div class="card large helpdesk done_tickets" t-on-click="tickets_done">
                                <div class="icon-circle" style="background-color: #e3f3e3;">
                                    <i class="fa fa-check icon" aria-label="Tickets Finalizados"></i>
                                </div>
                                <div class="count" id="done_count"></div>
                                <div class="label">Tickets Finalizados</div>
                            </div>
                            <div class="card large helpdesk team_card" t-on-click="tickets_cancelled">
                                <div class="icon-circle" style="background-color: #f8d5d5;">
                                    <i class="fa fa-times icon" aria-label="Tickets Cancelados"></i>
                                </div>
                                <div class="count" id="cancelled_count"></div>
                                <div class="label">Tickets Cancelados</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column: Priority + Chart -->
                <div class="col-6 main-right-column">
                    <!-- Priority Section -->
                    <div class="ticket_box chart-container card-shadow">
                        <h2 class="mb-2 text-center">Prioridad del Ticket</h2>
                        <div class="priority-content compact-view">
                            <div class="col-12 text-align">
                                <div class="text-color">
                                    <div class="line" t-on-click="tickets_low">Bajo:
                                        <div class="low_count" widget="progressbar">
                                            <div class="progress-value"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 text-align">
                                <div class="text-color">
                                    <div class="line" t-on-click="tickets_normal">Normal:
                                        <div class="normal_count" widget="progressbar">
                                            <div class="progress-value"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 text-align">
                                <div class="text-color">
                                    <div class="line" t-on-click="tickets_high">Alto:
                                        <div class="high_count" widget="progressbar">
                                            <div class="progress-value"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 text-align">
                                <div class="text-color">
                                    <div class="line" t-on-click="tickets_very_high">Muy Alto:
                                        <div class="very_high_count" widget="progressbar">
                                            <div class="progress-value"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Chart Section -->
                    <div class="leads_month_pie_div chart-container card-shadow p-3">
                        <h2 class="mb-2 text-center">Tickets asignados por usuarios</h2>
                        <div class="graph_canvas">
                            <canvas id="ticket_month" style="max-width: 100%; height: 600px;"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>