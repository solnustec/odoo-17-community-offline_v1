<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_coupon_printing" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.coupon.printing</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="95"/>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_bills_and_receipts_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="enable_coupon_printing">
                    <div class="o_setting_left_pane">
                        <field name="enable_coupon_printing"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_coupon_printing"/>
                        <div class="text-muted">
                            Configuración global: imprime un cupón por cada $10 gastados en todos los puntos de venta.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
