<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_purchase_order_wizard" model="ir.ui.view">
        <field name="name">import.xml.wizard</field>
        <field name="model">import.xml.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Orden de Compra desde XML">
                <group>
<!--                    <field name="file" filename="filename"/>-->
                    <field name="access_token"/>
                </group>
                <footer>
                    <button name="import_xml" type="object" string="Importar" class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del Wizard -->
    <record id="action_purchase_order_import_wizard" model="ir.actions.act_window">
        <field name="name">Importar Órdenes de Compra XML</field>
        <field name="res_model">import.xml.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_purchase_order_import_xml"
              name="Importar XML"
              parent="purchase.menu_procurement_management"
              groups="base.group_user"
              action="action_purchase_order_import_wizard"
              sequence="50"/>
</odoo>