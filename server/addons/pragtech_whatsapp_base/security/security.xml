<odoo>
    <data>
        <record id="category_whatsapp" model="ir.module.category">
            <field name="name">WhatsApp</field>
            <field name="sequence">600</field>
        </record>

        <record id="group_whatsApp_template" model="res.groups">
            <field name="name">WhatsApp Template</field>
            <field name="category_id" ref="category_whatsapp"/>
        </record>

        <record id="group_whatsApp_see_all_messages" model="res.groups">
            <field name="name">See All messages</field>
            <field name="category_id" ref="pragtech_whatsapp_base.category_whatsapp"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Grupo para usuarios que pueden cambiar el vendedor en órdenes de venta -->
        <record id="group_change_salesperson" model="res.groups">
            <field name="name">Cambiar Vendedor en Órdenes</field>
            <field name="category_id" ref="category_whatsapp"/>
            <field name="comment">Usuarios que pueden ver sus órdenes de venta y cambiar el vendedor asignado (user_id)</field>
        </record>

        <!-- Regla para que usuarios del grupo vean SOLO sus propias órdenes (donde son el vendedor) -->
        <record id="sale_order_change_salesperson_rule" model="ir.rule">
            <field name="name">Cambiar Vendedor: ver solo mis órdenes asignadas</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_change_salesperson'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Regla para que usuarios portal solo vean sus propias órdenes -->
        <record id="sale_order_portal_rule" model="ir.rule">
            <field name="name">Portal: ver/editar solo mis órdenes de venta</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[('partner_id', 'child_of', [user.commercial_partner_id.id])]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
