<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_odashboard" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.odashboard</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <field name="is_root_company" invisible="1"/>
                    <app data-string="Odashboard"
                         string="Odashboard" name="odashboard"
                         logo="/odashboard/static/description/icon.png">

                        <div id="odashboard_key">
                            <block title="License"
                                   name="odashboard_key_container">
                                <div class="d-flex justify-content-end">
                                    <button name="action_manage_plan"
                                            string="Manage my plan"
                                            type="object"
                                            icon="fa-bullseye"
                                            class="btn btn-link"
                                            invisible="not odashboard_key_synchronized"/>
                                </div>
                                <div class="row mt16 o_settings_container"
                                     id="odashboard_settings">
                                    <div class="col-12 col-lg-6 o_setting_box"
                                         id="odashboard_key_settings">
                                        <div class="o_setting_left_pane"/>
                                        <div class="o_setting_right_pane">
                                            <span class="o_form_label">Odashboard License key
                                            </span>
                                            <div class="text-muted">Enter your
                                                Odashboard license key here
                                            </div>
                                            <field name="odashboard_key"
                                                   placeholder="Enter your key"
                                                   readonly="odashboard_key_synchronized"
                                                   class="oe_input_key"/>
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-6 o_setting_box"
                                         id="odashboard_actions">
                                        <div class="o_setting_left_pane"/>
                                        <div class="o_setting_right_pane">
                                            <span class="o_form_label">Actions
                                            </span>
                                            <div class="text-muted">Synchronize
                                                or
                                                desynchronize your key
                                            </div>
                                            <button name="synchronize_key"
                                                    string="Synchronize key"
                                                    noSaveDialog="true"
                                                    type="object"
                                                    class="btn btn-primary"
                                                    invisible="odashboard_key_synchronized"/>
                                            <span class="mx-3" invisible="odashboard_key_synchronized">or</span>
                                            <button name="get_my_key"
                                                    string="Get my key"
                                                    noSaveDialog="true"
                                                    type="object"
                                                    class="btn btn-outline-secondary"
                                                    invisible="odashboard_key_synchronized"/>
                                            <button name="desynchronize_key"
                                                    string="Desynchronize key"
                                                    type="object"
                                                    class="btn btn-secondary"
                                                    invisible="not odashboard_key_synchronized"/>
                                            <div class="mt8 text-success"
                                                 invisible="not odashboard_key_synchronized">
                                                <span class="fa fa-check"/>
                                                key is synchronized
                                            </div>
                                            <field name="odashboard_key_synchronized" invisible="True"/>
                                            <field name="odashboard_plan" invisible="True"/>
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-6 o_setting_box"
                                         id="odashboard_uuid">
                                        <div class="o_setting_left_pane"/>
                                        <div class="o_setting_right_pane">
                                            <span class="o_form_label">Instance
                                                UUID
                                            </span>
                                            <div class="text-muted">Unique
                                                identifier
                                                for this Odoo instance (for
                                                support)
                                            </div>
                                            <field name="odashboard_uuid"
                                                   readonly="1"
                                                   class="oe_input_uuid"/>
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-6 o_setting_box"
                                         id="odashboard_plan">
                                        <field name="odashboard_key_synchronized" invisible="True"/>
                                        <field name="odashboard_plan" invisible="True"/>
                                        <div class="o_setting_left_pane"/>
                                        <div class="o_setting_right_pane">
                                            <span class="o_form_label">
                                                Plan
                                            </span>
                                            <div class="text-muted">
                                                Your odashboard plan
                                            </div>
                                            <span invisible="odashboard_plan != 'freemium'"
                                                  readonly="1"
                                                  class="badge bg-black text-white rounded">
                                                Freemium
                                            </span>
                                            <span invisible="odashboard_plan not in ['pro', 'partner'] or odashboard_is_free_trial"
                                                  readonly="1"
                                                  class="badge bg-success text-white rounded">
                                                Pro
                                            </span>
                                            <span invisible="not odashboard_is_free_trial"
                                                  readonly="1"
                                                  class="badge bg-info text-white rounded">
                                                Pro (Free Trial)
                                            </span>
                                            <span invisible="odashboard_key_synchronized or odashboard_plan">
                                                Key is not synchronized.
                                            </span>
                                            <field name="odashboard_is_free_trial" invisible="1"/>
                                            <field name="odashboard_free_trial_end_date" invisible="1"/>
                                            <div class="mt-2 text-info"
                                                 invisible="not odashboard_is_free_trial or not odashboard_free_trial_end_date">
                                                <i class="fa fa-clock-o me-1"/>
                                                <span>Free trial until </span>
                                                <field name="odashboard_free_trial_end_date"
                                                       readonly="1"
                                                       class="d-inline"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </block>
                        </div>
                    </app>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
