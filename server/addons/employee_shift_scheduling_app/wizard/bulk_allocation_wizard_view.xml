<?xml version="1.0"?>
<odoo>
    <data>
        <record id="bulk_allocation_wizard_form_view" model="ir.ui.view">
            <field name="name">bulk.allocation.wizard.wizard</field>
            <field name="model">bulk.allocation.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="shift_id" required="1"/>
                            <field name="from_date" required="1"/>
                        </group>
                        <group>
                            <field name="employee_ids" required="1" widget="many2many_tags"/>
                            <field name="to_date" required="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="weekend_ids" string='DÃ­as de Descanso'>
                                <tree editable="bottom">
                                    <field name="week_off_id" required="1" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="week_day_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True}"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                    <newline/>
                    <separator colspan="6"/>
                    <footer>
                        <button name="action_create_shift" string="Create" type="object" class="oe_highlight"/>
                        <button special="cancel" class="oe_highlight" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_bulk_allocation_wizard" model="ir.actions.act_window">
            <field name="name">Bulk of Shift Allocation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bulk.allocation.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>



