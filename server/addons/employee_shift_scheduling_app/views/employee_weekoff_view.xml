<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="employee_week_off_tree_view" model="ir.ui.view">
        <field name="name">employee.week.off.tree</field>
        <field name="model">employee.week.off</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="day_no"/>
            </tree>
        </field>
    </record>
    <record id="employee_week_off_form_view" model="ir.ui.view">
        <field name="name">employee.week.off.form</field>
        <field name="model">employee.week.off</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Name" required="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="day_no"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="employee_week_off_search_view" model="ir.ui.view">
            <field name="name">employee.week.off.search</field>
            <field name="model">employee.week.off</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="day_no"/>
                </search>
            </field>
        </record>

    <record id="action_employee_week_off" model="ir.actions.act_window">
            <field name="name">Employee Weekoff</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.week.off</field>
            <field name="view_mode">tree,search,form</field>
        </record>

         <menuitem id="menu_employee_sheet_schedule"
                  name="Shift Schedule"
                  parent="hr.menu_human_resources_configuration"
                  sequence="20"/>

