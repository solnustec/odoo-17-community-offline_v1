<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="employee_shift_tree_view" model="ir.ui.view">
        <field name="name">employee.shift.tree</field>
        <field name="model">employee.shift</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="shift_type_id"/>
                <field name="time_from"/>
                <field name="time_to"/>
                <field name="overtime"/>
                <field name="late"/>
                <field name="resource_calendar_id"/>
                <field name="user_id"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>
    <record id="employee_shift_form_view" model="ir.ui.view">
        <field name="name">employee.shift.form</field>
        <field name="model">employee.shift</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Name" required="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="shift_type_id" required="1"/>
                            <field name="time_from"/>
                             <field name="overtime"/>
                             <field name="user_id" required="1"/>
                        </group>
                        <group>
                            <field name="resource_calendar_id"/>
                            <field name="time_to"/>
                            <field name="late"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="employee_shift_search_view" model="ir.ui.view">
            <field name="name">employee.shift.search</field>
            <field name="model">employee.shift</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="shift_type_id"/>
                    <field name="time_from"/>
                    <field name="time_to"/>
                    <field name="overtime"/>
                    <field name="late"/>
                    <field name="resource_calendar_id"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                </search>
            </field>
        </record>

    <record id="action_employee_shift" model="ir.actions.act_window">
            <field name="name">Employee Shift</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.shift</field>
            <field name="view_mode">tree,search,form</field>
        </record>

         <menuitem id="menu_employee_sheet_schedule"
                  name="Shift Schedule"
                  parent="hr.menu_human_resources_configuration"
                  sequence="20"/>

