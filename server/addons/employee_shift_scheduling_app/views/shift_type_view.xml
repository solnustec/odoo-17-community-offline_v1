<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="shift_type_tree_view" model="ir.ui.view">
        <field name="name">shift.type.tree</field>
        <field name="model">shift.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="work_hours"/>
            </tree>
        </field>
    </record>
    <record id="shift_type_form_view" model="ir.ui.view">
        <field name="name">shift.type.form</field>
        <field name="model">shift.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Name" required="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="work_hours"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="shift_type_search_view" model="ir.ui.view">
            <field name="name">shift.type.search</field>
            <field name="model">shift.type</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="work_hours"/>
                </search>
            </field>
        </record>

    <record id="action_shift_type" model="ir.actions.act_window">
            <field name="name">Shift Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shift.type</field>
            <field name="view_mode">tree,search,form</field>
        </record>



