<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<!-- Wizard view -->
		<record id="ecu_generate_filebb_wizard_form" model="ir.ui.view">
			<field name="name">ecu_hr.generate.filebb.wizard.form</field>
			<field name="model">ecu_hr.generate.filebb.wizard</field>
			<field name='type'>form</field>
			<field name="arch" type="xml">
				<form string="Generar Archivo" version="7.0">
					<label for="year" string="Este asistente crea un archivo de los anticipos/NÃ³mina para el Banco Bolivariano." colspan="4"/>
					<separator  colspan="4"/>
					<group col="4">
						<field name="year" />
						<field name="months"  required="type in ['advance','payslip']" invisible="type in ['say','utilidad']"/>
						<field name="type" />
						<field name="type_say" required="type == 'say'" invisible="type in ['advance','utilidad','payslip']"/>
						<field name="employee_type" required="type in ['advance','payslip']" invisible="type not in ['advance','payslip']" />
					</group>
					<footer>
						<button string="Cancelar" type='object' special="cancel"/>
						<button string="Generar" type='object' name='create_report' class="oe_highlight"/>
					</footer>
				</form>
			</field>
		</record>

		<!-- Wizard action -->
		<record id="action_ecu_generate_filebb_wizard" model="ir.actions.act_window">
			<field name="name">Generador de archivo para el Banco Bolivariano</field>
			<field name="res_model">ecu_hr.generate.filebb.wizard</field>
			<!-- <field name="view_type">form</field> -->
			<field name="view_mode">form</field>
			<field name="view_id" ref="ecu_generate_filebb_wizard_form"/>
			<field name="target">new</field>	
		</record>

		<!-- <menuitem id="menu_generate_filebb_report1" parent="hr_payroll.menu_hr_payroll_report" name="Archivo Banco Bolivariano"
				sequence="90" action="action_ecu_generate_filebb_wizard"/> -->


		<!-- Wizard action -->
		<record id="action_ecu_generate_filebb_third_wizard" model="ir.actions.act_window">
			<field name="name">Generador de archivo para el Banco Bolivariano</field>
			<field name="res_model">ecu_hr.generate.filebb.wizard</field>
			<!-- <field name="view_type">form</field> -->
			<field name="view_mode">form</field>
			<field name="context">{"terceros": True}</field>
			<field name="view_id" ref="ecu_generate_filebb_wizard_form"/>
			<field name="target">new</field>
		</record>

		<menuitem id="menu_generate_filebb_third_report1" parent="hr_payroll.menu_hr_payroll_report" name="Archivo BB terceros"
				  sequence="90" action="action_ecu_generate_filebb_third_wizard"/>

	</data>
</openerp>