<odoo>
    <data>
        <record id="view_assign_schedule_departament" model="ir.ui.view">
            <field name="name">ec_payroll.assign_schedule.form</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <tree sample="1" multi_edit="1">
                    <field name="name" string="Empleados" readonly="1" />
                    <field name="horarios_departamento_computed" string="Horarios_cumputed" readonly="1" column_invisible="1"/>
                    <field name="department_id"/>
                    <field name="company_id" optional="hide"/>
                    <field name="resource_calendar_id" optional="hide"/>
                    <field name="identification_id" readonly="1" optional="hide"/>
                    <field name="job_id" optional="hide"/>
                    <field name="mobile_phone" readonly="1" optional="hide"/>
                    <field name="private_email" readonly="1" optional="hide"/>
                    <field name="parent_id" readonly="1" optional="hide"/>
                    <field name="horarios_departamento_ids" string="Horarios" widget="many2many_tags" domain="[('id', 'in', horarios_departamento_computed)]" optional="hide"/>
                </tree>
            </field>
        </record>


        <record id="action_department_view_form_manager" model="ir.actions.act_window">
            <field name="name">ec_payroll.assign_schedule.action</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_assign_schedule_departament"/>
            <field name="target">current</field>
            <field name="domain">[('department_id', '=', context.get('default_department_id'))]</field>
        </record>


<!--        vista editada-->


        <record id="department_view_form_manager_inherit" model="ir.ui.view">
            <field name="name">department.view.form.manager.inherit</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='color']" position="after">
                    <field name="code" required="1"/>
                    <field name="periodes_leaves"/>
                    <field name="city_id"/>
                    <field name="resource_id" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//button[@name='action_plan_from_department']" position="after">
                    <button class="oe_stat_button" type="action"
                            name="%(action_department_view_form_manager)d"
                            icon="fa-list-ul" context="{'default_department_id': active_id}">
                        Empleados
                    </button>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
