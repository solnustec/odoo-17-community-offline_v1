<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record model="ir.ui.view" id="hr_holidays_status_form_view">
			<field name="name">hr.holidays.status.form</field>
			<field name="model">hr.holidays.status</field>
			<field name="inherit_id"
				ref="hr_holidays.edit_holiday_status_form" />
			<field name="arch" type="xml">
				<field name="color_name" position="after">
					<field name="code" />
					<field name="is_paid" />
				</field>
			</field>
		</record>

		<record model="ir.ui.view" id="hr_holiday_status_tree_view">
			<field name="name">hr.holidays.status.tree</field>
			<field name="model">hr.holidays.status</field>
			<field name="inherit_id"
				ref="hr_holidays.view_holiday_status_normal_tree" />
			<field name="arch" type="xml">
				<field name="name" position="before">
					<field name="code" />
				</field>
				<field name="limit" position="after">
					<field name="is_paid" />
				</field>
			</field>
		</record>

	</data>
</odoo>