<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="report.paperformat" id="report_payslip_paperformat">
        <field name="name">Payslip Report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record model="report.paperformat" id="report_payslip_paperformat2">
        <field name="name">Liquidations Report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_report_payslip" model="ir.actions.report">
        <field name="name">Payslip</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_payroll.report_payslip_lang</field>
        <field name="report_file">hr_payroll.report_payslip_lang</field>
        <field name="print_report_name">'Payslip - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_hr_payslip"/>
        <field name="paperformat_id" ref="report_payslip_paperformat"/>
        <field name="binding_type">report</field>
        <field name="attachment"></field>
        <field name="attachment_use" eval="False"/>
    </record>

    <record id="action_report_payslip_liquidations" model="ir.actions.report">
        <field name="name">Liquidaciones</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_payroll.report_payslip_liquidations</field>
        <field name="report_file">hr_payroll.report_payslip_liquidations</field>
        <field name="print_report_name">'liquidaciones - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_hr_payslip"/>
        <field name="paperformat_id" ref="report_payslip_paperformat2"/>
        <field name="binding_type">report</field>
        <field name="attachment"></field>
        <field name="attachment_use" eval="False"/>
    </record>


    <record id="action_report_register" model="ir.actions.report">
        <field name="name">Contribution Registers</field>
            <field name="model">hr.payslip.line</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hr_payroll.contribution_register</field>
            <field name="report_file">hr_payroll.contribution_register</field>
            <field name="binding_model_id" ref="model_hr_payslip_line"/>
            <field name="binding_type">report</field>
        </record>
</odoo>
