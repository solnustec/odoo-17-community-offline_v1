<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="picking_reject_wizard_form_view" model="ir.ui.view">
        <field name="name">picking.reject.wizard.form.view</field>
        <field name="model">picking.reject.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="picking_id" readonly="1"/>
                        <field name="reject_reason" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Reject" name="button_reject" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_picking_reject" model="ir.actions.act_window">
        <field name="name">Picking Reject</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">picking.reject.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_picking_id': active_id}</field>
    </record>
</odoo>