<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Record for creating new fields in res configuration settings-->
    <record id="view_pos_config_form_inherit_stock_regulation" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.stock</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <!-- Insertar el nuevo campo debajo del campo 'other_devices' dentro del setting correspondiente -->
            <xpath expr="//setting[@id='other_devices']" position="after">
                    <setting id="point_of_sale_id_setting" string="Habilitar regulación de stock"
                             help="Habilitar regulación de stock">
                        <field name="stock_regulation"/>
                    </setting>
                    <setting id="point_of_sale_series_setting" string="Tiempo de sincronización"
                             help="Tiempo de sincronización">
                        <field name="time_refresh"/>
                    </setting>
                    <setting id="point_of_sale_series_setting" string="Activar Sincronización de regulación de stock"
                             help="Puedes activar o desactivar la sincronización de datos, con el sistema anterior">
                        <field name="sync_data"/>
                    </setting>
            </xpath>
        </field>
    </record>
