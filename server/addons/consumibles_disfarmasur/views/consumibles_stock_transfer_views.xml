<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ================= TREE ================= -->
    <record id="view_consumibles_stock_transfer_tree" model="ir.ui.view">
        <field name="name">consumibles.stock.transfer.tree</field>
        <field name="model">consumibles.stock.transfer</field>
        <field name="arch" type="xml">
            <tree string="Transferencias de Consumibles"
                  decoration-success="state == 'confirmed'"
                  decoration-danger="state == 'cancel'"
                  decoration-warning="state == 'draft'">

                <field name="name"/>
                <field name="date"/>
                <field name="warehouse_id" string="Destino"/>
                <field name="state" string="Estado"/>

            </tree>
        </field>
    </record>


    <!-- ================= FORM ================= -->
    <record id="view_consumibles_stock_transfer_form" model="ir.ui.view">
        <field name="name">consumibles.stock.transfer.form</field>
        <field name="model">consumibles.stock.transfer</field>
        <field name="arch" type="xml">
            <form string="Transferencia de Stock">

                <!-- HEADER -->
                <header>

                    <button name="action_confirm"
                            type="object"
                            string="Confirmar"
                            class="btn-primary"
                            modifiers="{'invisible': [['state', '!=', 'draft']]}"/>

                    <button name="action_cancel"
                            type="object"
                            string="Cancelar"
                            class="btn-secondary"
                            modifiers="{'invisible': [['state', '!=', 'confirmed']]}"/>

                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,confirmed,cancel"/>

                </header>


                <sheet>

                    <!-- DATOS GENERALES -->
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                        </group>

                        <group>
                            <field name="warehouse_id"/>
                        </group>
                    </group>

                    <!-- LÃNEAS -->
                    <notebook>
                        <page string="Detalle de productos">
                            <field name="line_ids"
                                   modifiers="{'readonly': [['state','!=','draft']]}">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_type_line_id"
                                           domain="[('product_id', '=', product_id)]"
                                           context="{'default_product_id': product_id}"/>
                                    <field name="qty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ================= ACTION ================= -->
    <record id="action_consumibles_stock_transfer" model="ir.actions.act_window">
        <field name="name">Transferencias de Consumibles</field>
        <field name="res_model">consumibles.stock.transfer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ================= MENU ================= -->
    <menuitem id="menu_consumibles_stock_transfer"
              name="Transferencias"
              parent="menu_custom_product_root"
              action="action_consumibles_stock_transfer"
              sequence="40"/>

</odoo>
