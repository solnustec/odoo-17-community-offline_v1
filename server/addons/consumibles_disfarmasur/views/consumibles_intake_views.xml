<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ================= TREE ================= -->
    <record id="view_consumibles_intake_tree" model="ir.ui.view">
        <field name="name">consumibles.intake.tree</field>
        <field name="model">consumibles.intake</field>
        <field name="arch" type="xml">
            <tree string="Facturas">
                <field name="invoice_number"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- ================= FORM ================= -->
    <record id="view_consumibles_intake_form" model="ir.ui.view">
        <field name="name">consumibles.intake.form</field>
        <field name="model">consumibles.intake</field>
        <field name="arch" type="xml">
            <form string="Ingreso de Consumibles">

                <!-- HEADER -->
                <header>
                    <button name="action_confirm"
                            string="Confirmar"
                            type="object"
                            class="btn-primary"
                            modifiers="{'invisible': [['state','not in',['draft','cancel']]]}"/>

                    <button name="action_cancel"
                            string="Cancelar"
                            type="object"
                            class="btn-secondary"
                            modifiers="{'invisible': [['state','!=','confirmed']]}"/>


                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,confirmed,cancel"/>
                </header>

                <sheet>

                    <!-- DATOS GENERALES -->
                    <group>
                        <group>
                            <field name="invoice_number"
                                   modifiers="{'readonly': [['state','!=','draft']]}"/>
                            <field name="partner_id"
                                   modifiers="{'readonly': [['state','!=','draft']]}"/>
                        </group>

                        <group>
                            <field name="date"
                                   modifiers="{'readonly': [['state','!=','draft']]}"/>

                            <field name="total_amount"/>
                        </group>
                    </group>

                    <!-- LÃNEAS -->
                    <notebook>
                        <page string="Detalle de productos">
                            <field name="line_ids"
                                   modifiers="{'readonly': [['state','!=','draft']]}">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_type_line_id"
                                           domain="[('product_id', '=', product_id)]"
                                           context="{'default_product_id': product_id}"/>

                                    <field name="qty"/>
                                    <field name="cost"/>
                                    <field name="line_total" readonly="1"/>
                                </tree>

                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ================= ACTION ================= -->
    <record id="action_consumibles_intake" model="ir.actions.act_window">
        <field name="name">Facturas</field>
        <field name="res_model">consumibles.intake</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ================= MENU ================= -->
    <menuitem id="menu_consumibles_intake"
              name="Facturas"
              parent="menu_custom_product_root"
              action="action_consumibles_intake"
              sequence="30"/>

</odoo>
