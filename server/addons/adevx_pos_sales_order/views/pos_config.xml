                        </group>
                        <group name="sales_order_right">
                            <field name="sale_order_auto_confirm"
                                   invisible="not create_sale_order and not update_sale_order"/>
<!--                            <field name="sale_order_auto_delivery"-->
<!--                                   invisible="not create_sale_order and not update_sale_order"/>-->
<!--                            <field name="sale_order_auto_invoice"-->
<!--                                   invisible="not create_sale_order and not update_sale_order"/>-->
                        </group>
                    </group>
                </xpath>
            </field>
        </record>


    </data>
</odoo>