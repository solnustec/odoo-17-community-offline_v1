<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Configuração do tipo de vector store -->
        <record id="config_vector_store_type" model="ir.config_parameter">
            <field name="key">product_ai_search.vector_store_type</field>
            <field name="value">elasticsearch</field>
        </record>

        <!-- Parâmetros de configuração Elasticsearch -->
        <record id="config_elasticsearch_url" model="ir.config_parameter">
            <field name="key">product_ai_search.elasticsearch_url</field>
            <field name="value">http://elasticsearch:9200</field>
        </record>

        <record id="config_elasticsearch_index" model="ir.config_parameter">
            <field name="key">product_ai_search.elasticsearch_index</field>
            <field name="value">products_odoo_ai</field>
        </record>

        <record id="config_elasticsearch_strategy" model="ir.config_parameter">
            <field name="key">product_ai_search.elasticsearch_strategy</field>
            <field name="value">dense</field>
        </record>

        <!-- Configuração geral -->
        <record id="config_batch_size" model="ir.config_parameter">
            <field name="key">product_ai_search.batch_size</field>
            <field name="value">50</field>
        </record>

        <record id="config_auto_index" model="ir.config_parameter">
            <field name="key">product_ai_search.auto_index</field>
            <field name="value">False</field>
        </record>

        <!-- Placeholder para chave OpenAI (deve ser configurado pelo usuário) -->
        <record id="config_openai_api_key" model="ir.config_parameter">
            <field name="key">product_ai_search.openai_api_key</field>
            <field name="value"></field>
        </record>
    </data>
</odoo>
