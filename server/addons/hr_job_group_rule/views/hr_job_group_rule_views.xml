<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_hr_job_group_rule" model="ir.actions.act_window">
        <field name="name">Reglas de Grupos por Cargo</field>
        <field name="res_model">hr.job.group.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea reglas para asignar grupos seg√∫n el cargo del empleado.
            </p>
        </field>
    </record>

    <menuitem id="menu_hr_job_group_rule_root"
              name="Reglas por Cargo"
              parent="hr.menu_config_employee"
              sequence="75"
              action="action_hr_job_group_rule"
              groups="group_hr_job_group_rule"/>

    <record id="view_hr_job_group_rule_tree" model="ir.ui.view">
        <field name="name">hr.job.group.rule.tree</field>
        <field name="model">hr.job.group.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="job_id"/>
                <field name="apply_mode"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_job_group_rule_form" model="ir.ui.view">
        <field name="name">hr.job.group.rule.form</field>
        <field name="model">hr.job.group.rule</field>
        <field name="arch" type="xml">
            <form string="Regla de grupos por cargo">
                <sheet>
                    <header>
                        <field name="active" widget="boolean_toggle"/>
                    </header>

                    <div class="oe_button_box" name="button_box">
                        <!-- (Opcional) espacio para acciones futuras -->
                    </div>

                    <group>
                        <field name="name"/>
                        <field name="job_id" options="{'no_open': True}"/>
                    </group>

                    <group>
                        <field name="apply_mode"/>
                    </group>

                    <notebook>
                        <page string="Grupos">
                            <field name="access_group_ids" widget="many2many_tags" required="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
