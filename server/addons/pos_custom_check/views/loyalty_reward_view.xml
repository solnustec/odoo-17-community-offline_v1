<odoo>
    <data>

        <record id="loyalty_reward_search" model="ir.ui.view">
            <field name="name">loyalty.reward.search</field>
            <field name="model">loyalty.reward</field>
            <field name="arch" type="xml">
                <search>
                    <field name="display_name" string="Nombre"/>
                    <filter name="reward_type" string="Tipo" context="{'group_by': 'reward_type'}"/>
                </search>
            </field>
        </record>

        <record id="loyalty_reward_tree" model="ir.ui.view">
            <field name="name">tree.loyalty.reward</field>
            <field name="model">loyalty.reward</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="display_name" />
                    <field name="reward_type" />
                    <field name="program_id" />
                    <field name="discount" />
                    <field name="discount_product_ids" />
                    <field name="reward_product_id" />
                    <field name="required_points" />
                    <field name="limit_quanty" />
                    <field name="frecuency_sale" />
                    <field name="is_main" />

                </tree>
            </field>
        </record>

    </data>
</odoo>

