<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_pos_check_info" model="ir.ui.view">
        <field name="name">pos.payment.method.view.form.inherit.point_of_sale.pos.check.info</field>
        <field name="model">pos.payment.method</field>
        <field name="priority" eval="95"/>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_online_payment']" position="before">
                <field name="code_payment_method" readonly="id != False"/>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="allow_check_info"/>
            </xpath>
        </field>
    </record>
</odoo>

