<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_custom_check.OrderWidgetCustom" t-inherit="point_of_sale.OrderWidget" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[contains(@class, 'order-container')]" position="replace">
            <div t-ref="scrollable" class="order-container bg-view overflow-y-auto flex-grow-1 d-flex flex-column text-start">
                <t t-foreach="orderedLines" t-as="line" t-key="line_index">
                    <t t-if="line.is_separator">
                        <li class="orderline-separator text-center fw-bold text-muted">
                            <t t-esc="line.productName" />

                        </li>
                    </t>
                    <t t-else="">
                        <div class="items">
                            <div class="line-product"
                                 t-att-atrib-id="line.product?.id ? line.product.id : null"
                                 t-att-atrib-discount="line.reward_type == 'discount' ? line.reward_product_id : null"
                                 t-att-style="line.product.name.includes('Producto gratis') ? 'color: #008b8b;background-color:RGBA(233, 236, 239, var(--bg-opacity, 1));;' : ''">
                                <t t-slot="default" line="line" />
                            </div>
                        </div>

                    </t>
                </t>
            </div>
        </xpath>
    </t>
</templates>

