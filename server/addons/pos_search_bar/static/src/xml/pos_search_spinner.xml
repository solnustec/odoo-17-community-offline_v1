<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
  <t t-inherit="point_of_sale.ProductsWidget" t-inherit-mode="extension">
    <!-- Insert spinner before product cards -->
    <xpath expr="//div[@class='product-list-container flex-grow-1 overflow-y-auto']" position="inside">
      <div
        t-if="state.isLoading"
        class="d-flex align-items-center justify-content-center position-absolute top-0 start-0 w-100 h-100 bg-white bg-opacity-75"
        style="z-index: 1000;">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>
    </xpath>
  </t>
</templates>
