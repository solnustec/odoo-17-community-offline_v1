<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ===================================================================== -->
    <!-- CRON JOB: Cache Warmup (runs daily at 6 AM)                           -->
    <!-- Pre-populates cache after nightly maintenance                         -->
    <!-- ===================================================================== -->

    <record id="ir_cron_warmup_employee_cache" model="ir.cron">
        <field name="name">HR Kanban: Daily Cache Warmup</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="state">code</field>
        <field name="code">model.warmup_cache(limit=200)</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="priority">50</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 06:00:00')"/>
    </record>

</odoo>
