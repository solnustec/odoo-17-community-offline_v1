<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ===================================================================== -->
    <!-- OPTIMIZED HR EMPLOYEE KANBAN VIEW (Independent - No inheritance)      -->
    <!-- This is a complete new kanban view with optimizations                 -->
    <!-- ===================================================================== -->

    <record id="hr_kanban_view_employees_optimized" model="ir.ui.view">
        <field name="name">hr.employee.kanban.optimized</field>
        <field name="model">hr.employee</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <kanban class="o_hr_employee_kanban o_hr_employee_kanban_optimized" sample="1" js_class="employee_kanban_optimized">
                <!-- Essential fields for initial load -->
                <field name="id"/>
                <field name="name"/>
                <field name="job_title"/>
                <field name="hr_presence_state"/>
                <field name="user_id"/>
                <field name="user_partner_id"/>
                <field name="hr_icon_display"/>
                <field name="show_hr_icon_display"/>
                <field name="image_128"/>
                <field name="company_id"/>
                <field name="color"/>
                <!-- Optimized fields -->
                <field name="has_image"/>
                <field name="activities_summary"/>
                <!-- Deferred fields (will be loaded on hover) -->
                <field name="work_email"/>
                <field name="work_phone"/>
                <field name="category_ids"/>
                <field name="activity_ids"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record o_hr_kanban_record_optimized"
                             t-att-data-employee-id="record.id.raw_value"
                             t-att-data-has-image="record.has_image.raw_value">

                            <!-- Image Section - with lazy loading support -->
                            <t t-if="record.image_128.raw_value">
                                <field name="image_128"
                                       class="o_kanban_image_fill_left d-block o_employee_kanban_image"
                                       widget="background_image"
                                       options="{'zoom': true, 'zoom_delay': 1000}"/>
                            </t>
                            <t t-elif="record.has_image.raw_value">
                                <!-- Placeholder while image loads -->
                                <div class="o_kanban_image_fill_left d-block o_employee_image_placeholder"
                                     t-attf-style="background-color: #{kanban_color(record.id.raw_value % 10)}">
                                    <div class="o_employee_initials">
                                        <t t-esc="(record.name.value || '?').substring(0, 2).toUpperCase()"/>
                                    </div>
                                </div>
                            </t>
                            <t t-else="">
                                <!-- No image - show avatar placeholder -->
                                <div class="o_kanban_image_fill_left d-flex align-items-center justify-content-center bg-100 bg-gradient">
                                    <svg class="w-75 h-75 opacity-50" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                        <g fill="currentColor">
                                            <path d="M 10 11 C 4.08 11 2 14 2 16 L 2 19 L 18 19 L 18 16 C 18 14 15.92 11 10 11 Z"/>
                                            <circle cx="10" cy="5.5" r="4.5"/>
                                        </g>
                                    </svg>
                                </div>
                            </t>

                            <!-- Employee Details Section -->
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name" placeholder="Employee's Name"/>
                                            <div class="float-end">
                                                <div t-if="record.show_hr_icon_display.raw_value">
                                                    <field name="hr_icon_display" class="o_employee_availability" widget="hr_presence_status"/>
                                                </div>
                                            </div>
                                        </strong>
                                        <span t-if="record.job_title.raw_value" class="o_kanban_record_subtitle">
                                            <field name="job_title"/>
                                        </span>
                                    </div>
                                </div>

                                <!-- Contact Details (deferred loading via CSS) -->
                                <ul class="o_employee_contact_list">
                                    <li t-if="record.work_email.raw_value" class="o_text_overflow">
                                        <i class="fa fa-fw me-2 fa-envelope text-primary" title="Email"/>
                                        <field name="work_email"/>
                                    </li>
                                    <li t-if="record.work_phone.raw_value" class="o_force_ltr">
                                        <i class="fa fa-fw me-2 fa-phone text-primary" title="Phone"/>
                                        <field name="work_phone"/>
                                    </li>
                                    <li class="hr_tags">
                                        <field name="category_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="hide"/>
                                    </li>
                                </ul>

                                <!-- Activities Summary Badge -->
                                <div class="o_employee_activities_summary" t-if="record.activities_summary.raw_value">
                                    <t t-set="act_summary" t-value="record.activities_summary.raw_value"/>
                                    <t t-if="act_summary and act_summary.count">
                                        <span t-attf-class="badge rounded-pill #{act_summary.has_overdue ? 'bg-danger' : (act_summary.has_today ? 'bg-warning text-dark' : 'bg-info')}">
                                            <i class="fa fa-clock-o me-1"/>
                                            <t t-esc="act_summary.count"/> activities
                                        </span>
                                    </t>
                                </div>
                            </div>

                            <!-- Footer Section -->
                            <div class="oe_kanban_content o_hr_employee_kanban_bottom position-absolute bottom-0 start-0 end-0">
                                <div class="o_kanban_record_bottom mt-3">
                                    <div class="oe_kanban_bottom_left"/>
                                    <div class="oe_kanban_bottom_right">
                                        <div class="hr_avatar mb-1 ms-2 me-n1">
                                            <field name="user_id" widget="many2one_avatar_user" readonly="1"/>
                                        </div>
                                        <div class="hr_activity_container mb-1 ms-2 me-n1">
                                            <field name="activity_ids" widget="kanban_activity"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ===================================================================== -->
    <!-- Override the action to use optimized view first                       -->
    <!-- ===================================================================== -->

    <record id="hr.open_view_employee_list_my" model="ir.actions.act_window">
        <field name="view_mode">kanban,tree,form,activity,graph,pivot</field>
    </record>

</odoo>
