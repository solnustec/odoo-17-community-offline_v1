<?xml version="1.0" encoding="utf-8"?>
 <odoo>
     <!-- Menu Action -->
     <record id="menu_city_chatbot" model="ir.actions.act_window">
         <field name="name">Farmacia turno/24 horas</field>
         <field name="res_model">chatbot_message.city</field>
         <field name="view_mode">tree,graph</field>
     </record>

     <!-- Banner tree view -->
     <record id="view_user_city_tree" model="ir.ui.view">
         <field name="name">chatbot_message.city.tree</field>
         <field name="model">chatbot_message.city</field>
         <field name="arch" type="xml">
             <tree string="Farmacia turno/24 horas">
                 <field name="user_id"/>
                 <field name="latitude"/>
                 <field name="longitude"/>
                 <field name="city_name"/>
                 <field name="pharmacy_name"/>
                 <field name="pharmacy_type"/>
                 <field name="create_date"/>
                 <field name="create_time"/>
             </tree>
         </field>
     </record>

     <record id="view_user_city_graph" model="ir.ui.view">
         <field name="name">chatbot_message.city.graph</field>
         <field name="model">chatbot_message.city</field>
         <field name="arch" type="xml">
             <graph string="Farmacia turno/24 horas">
                 <field name="city_name"/>
                 <field name="user_id"/>
                 <field name="latitude"/>
                 <field name="longitude"/>
                 <field name="pharmacy_name"/>
                 <field name="pharmacy_type"/>
                 <field name="create_date"/>
                 <field name="create_time"/>
             </graph>
         </field>
     </record>
 </odoo>