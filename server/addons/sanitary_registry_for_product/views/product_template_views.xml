<odoo>
    <!-- Vista de búsqueda -->
    <record id="product_template_search_view_inherit" model="ir.ui.view">
        <field name="name">product.template.search.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <group expand="1" string="Registro Sanitario">
                    <filter string="Registro Vigente" name="sanitary_vigente" domain="[('sanitary_registry_status','=','vigente')]"/>
                    <filter string="Próximo a Vencer" name="sanitary_proximo" domain="[('sanitary_registry_status','=','proximo')]"/>
                    <filter string="Expirado" name="sanitary_vencido" domain="[('sanitary_registry_status','=','vencido')]"/>
                    <filter string="Sin Registro" name="sanitary_sin_registro" domain="[('sanitary_registry_status','=','sin_registro')]"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>