<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_asset_mass_transfer">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="wizard">
                <t t-call="web.external_layout">
                    <main class="o_report_layout afx-wrap">

                        <h3 class="afx-title">ACTA DE TRANSFERENCIA MASIVA DE ACTIVOS</h3>
                        <div class="afx-subtitle">Este documento registra el cambio de custodia de varios activos.</div>

                        <p>
                            <strong>Nuevo Custodio:</strong>
                            <span t-esc="wizard.new_custodian_id.name"/>
                        </p>
                        <p>
                            <strong>Fecha:</strong>
                            <span t-esc="wizard.transfer_date"/>
                        </p>
                        <p>
                            <strong>Observaciones:</strong>
                            <span t-esc="wizard.note"/>
                        </p>

                        <!-- Iteramos activos -->
                        <t t-foreach="wizard.asset_ids" t-as="asset">
                            <div style="margin:15px 0; border:1px solid #000; padding:10px; page-break-inside: avoid;">
                                <h4>
                                    <span t-esc="asset.name"/>
                                    (<span t-esc="asset.asset_code"/>)
                                </h4>

                                <!-- Buscamos última transferencia -->
                                <t t-set="transfer"
                                   t-value="asset.transfer_ids and asset.transfer_ids.sorted(key=lambda t: (t.transfer_date, t.id))[-1] or False"/>

                                <table class="table table-sm table-bordered" style="width:100%; margin-top:10px;">
                                    <tr>
                                        <td>
                                            <strong>Custodio Anterior</strong>
                                        </td>
                                        <td>
                                            <span t-esc="transfer.custodian_from_id.name if transfer else ''"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Nuevo Custodio</strong>
                                        </td>
                                        <td>
                                            <span t-esc="transfer.custodian_to_id.name if transfer else ''"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Fecha de Transferencia</strong>
                                        </td>
                                        <td>
                                            <span t-esc="transfer.transfer_date if transfer else ''"/>
                                        </td>
                                    </tr>
                                </table>

                                <!-- Firmas -->
                                <div style="display:flex; gap:10px; margin-top:10px;">

                                    <!-- Firma Custodio Anterior -->
                                    <div style="flex:1; border:1px solid #999; padding:10px; text-align:center; height:150px;">
                                        <div>
                                            <strong>CUSTODIO ANTERIOR</strong>
                                        </div>
                                        <t t-if="transfer and transfer.signed_by_from">
                                            <span style="color:green;">✔ Firmado</span>
                                        </t>
                                        <t t-else="">
                                            <span style="color:red;">Pendiente de firma</span>
                                        </t>
                                    </div>

                                    <!-- Firma Nuevo Custodio -->
                                    <div style="flex:1; border:1px solid #999; padding:10px; text-align:center; height:150px;">
                                        <div>
                                            <strong>NUEVO CUSTODIO</strong>
                                        </div>
                                        <t t-if="transfer and transfer.signed_by_to">
                                            <span style="color:green;">✔ Firmado</span>
                                        </t>
                                        <t t-else="">
                                            <span style="color:red;">Pendiente de firma</span>
                                        </t>
                                    </div>

                                    <!-- Firma Administrador -->
                                    <div style="flex:1; border:1px solid #999; padding:10px; text-align:center; height:150px;">
                                        <div>
                                            <strong>ADMINISTRADOR</strong>
                                        </div>
                                        <t t-if="transfer and transfer.signed_by_admin">
                                            <span style="color:green;">✔ Firmado</span>
                                        </t>
                                        <t t-else="">
                                            <span style="color:red;">Pendiente de firma</span>
                                        </t>
                                    </div>

                                </div>
                            </div>
                        </t>

                    </main>
                </t>
            </t>
        </t>
    </template>
</odoo>
