<!-- report.xml -->

<odoo>
    <data>

        <record id="reporte_id_paperformat" model="report.paperformat">
            <field name="name">Report Paperformat custom</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
        </record>

        <record id="action_imprimir_reporte" model="ir.actions.report">
            <field name="name">Reporte test</field>
            <field name="model">asset.transfer</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">account_asset_management.report_asset_transfer</field>
            <field name="report_file">account_asset_management.report_asset_transfer</field>
            <field name="paperformat_id" ref="reporte_id_paperformat"/>
            <field name="print_report_name">'Reporte transferencia de Activo - %s - %s' % (object.asset_id.name or "",
                object.transfer_date or "")
            </field>
            <field name="binding_model_id" ref="account_asset_management.model_asset_transfer"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>