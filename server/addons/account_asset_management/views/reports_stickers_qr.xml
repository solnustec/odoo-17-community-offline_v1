<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_asset_qr_labels">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <!-- Cada activo en su propia página -->
                <div class="page" style="page-break-after: always;">
                    <main>
                        <!-- Espaciador superior -->
                        <div style="height:3mm;"></div>

                        <table style="width:80mm; height:30mm; border-collapse:collapse; font-family:Arial, sans-serif;">
                            <tr style="vertical-align:top;">
                                <!-- Columna izquierda -->
                                <td style="width:25%; text-align:left; padding:0; vertical-align:top;">
                                    <!-- Logo -->
                                    <div>
                                        <img t-if="o.company_id.logo"
                                             t-att-src="image_data_uri(o.company_id.logo)"
                                             style="max-height:20mm; max-width:25mm; display:block;"/>
                                    </div>
                                    <!-- Nombre -->
                                    <div style="font-size:8pt; font-weight:bold;
                                                text-transform:uppercase;
                                                line-height:1.2;
                                                margin-top:2mm;
                                                word-wrap:break-word;
                                                word-break:break-word;
                                                white-space:normal;
                                                max-width:20mm;">
                                        <span t-esc="o.name"/>
                                    </div>
                                </td>

                                <!-- Columna derecha -->
                                <td style="width:75%; text-align:center; padding:0; vertical-align:top;">
                                    <div style="display:inline-block; text-align:center;">
                                        <!-- QR -->
                                        <img t-if="o.qr_info"
                                             t-att-src="'data:image/png;base64,' + (o.get_qr_code_image() or '')"
                                             style="height:24mm; width:24mm; display:block; margin:0 auto;"/>
                                        <!-- Código -->
                                        <div style="font-size:9pt; font-weight:bold; margin-top:1mm;">
                                            <span t-esc="o.asset_code or '---'"/>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </main>
                </div>
            </t>
        </t>
    </template>
</odoo>
