<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="hr_attendance_general_modal_form_view" model="ir.ui.view">
        <field name="name">hr.attendance.general.modal.form</field>
        <field name="model">hr.attendance.general.modal</field>
        <field name="arch" type="xml">
                <form string="Importar Recibo General">
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                    <footer>
                        <button name="process" type="object" string="Procesar" class="btn-primary"/>
                        <button special="cancel" class="oe_highlight" string="Cancel"/>
                    </footer>
                </form>
            </field>
    </record>
    <record id="action_hr_attendance_general_modal" model="ir.actions.act_window">
        <field name="name">Fechas de marcaciones a procesar</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.attendance.general.modal</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
