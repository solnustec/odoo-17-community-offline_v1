<odoo>

    <!-- Acción -->
    <record id="action_consumable_intake" model="ir.actions.act_window">
        <field name="name">Facturas</field>
        <field name="res_model">allocations.consumable.intake</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <!-- Menú raíz de la app -->
    <menuitem id="menu_root_consumable_products"
              name="Consumibles"
              sequence="10"
              web_icon="allocations_consumable_products,static/description/icon.png"/>

    <!-- Submenú -->
    <menuitem id="menu_consumable_intake"
              name="Ingreso de facturas"
              parent="menu_root_consumable_products"
              action="action_consumable_intake"
              sequence="10"/>

    <!-- Lista (cabecera) -->
    <record id="view_consumable_intake_tree" model="ir.ui.view">
        <field name="name">allocations.consumable.intake.tree</field>
        <field name="model">allocations.consumable.intake</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bill_number"/>
                <field name="vendor_id"/>
                <field name="date_purchase"/>
                <field name="amount_total"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- Formulario (cabecera + líneas) -->
    <record id="view_consumable_intake_form" model="ir.ui.view">
        <field name="name">allocations.consumable.intake.form</field>
        <field name="model">allocations.consumable.intake</field>
        <field name="arch" type="xml">
            <form string="Ingreso de Consumibles">
                <sheet>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="vendor_id"/>
<!--                            <field name="manufacturer_id"/>-->
                            <field name="location"/>
<!--                            <field name="category"/>-->
                        </group>
                        <group>
<!--                            <field name="model_no"/>-->
<!--                            <field name="article_no"/>-->
                            <field name="order_number"/>
                            <field name="bill_number"/>
                            <field name="date_purchase"/>
                            <field name="currency_id" readonly="true"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Líneas">
                            <!-- OK: este context usa un campo del mismo registro -->
                            <field name="line_ids" context="{'default_currency_id': currency_id}">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="qty" widget="float"/>
                                    <field name="qty_available" readonly="1" widget="float"/>
                                    <field name="unit_cost" widget="float"/>
                                    <field name="subtotal" readonly="1"/>
                                </tree>
                            </field>

                        </page>
                        <page string="Totales">
                            <group>
                                <field name="amount_untaxed" readonly="1"/>
                                <field name="amount_total" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para generar el reporte XLSX desde el listado -->
    <record id="action_consumable_report_xlsx" model="ir.actions.report">
        <field name="name">Exportar Reporte XLSX</field>
        <field name="model">allocations.consumable.intake</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">allocations_consumable_products.consumable_report_xlsx</field>
        <field name="report_file">allocations_consumable_products.consumable_report_xlsx</field>
        <field name="binding_model_id" ref="model_allocations_consumable_intake"/>
        <field name="binding_view_types">list</field>
    </record>


</odoo>
