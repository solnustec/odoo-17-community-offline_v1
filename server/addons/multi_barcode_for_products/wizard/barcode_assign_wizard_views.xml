<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista del Wizard de Asignación de Barcode -->
    <record id="barcode_assign_wizard_form" model="ir.ui.view">
        <field name="name">barcode.assign.wizard.form</field>
        <field name="model">barcode.assign.wizard</field>
        <field name="arch" type="xml">
            <form string="Asignar Código de Barras">
                <sheet>
                    <div class="alert alert-warning mb-3" role="alert">
                        <h4 class="alert-heading mb-2">
                            <i class="fa fa-exclamation-triangle me-2"/>
                            Código de barras no registrado
                        </h4>
                        <p class="mb-0">
                            ¿Desea asignar este código de barras al producto seleccionado?
                        </p>
                    </div>

                    <group col="2">
                        <group string="Datos del Código">
                            <field name="barcode" readonly="1" class="fw-bold"/>
                        </group>
                        <group string="Producto Destino">
                            <field name="product_id" readonly="1" options="{'no_open': True}"/>
                        </group>
                    </group>

                    <group invisible="not purchase_order_id" col="2">
                        <group string="Trazabilidad">
                            <field name="purchase_order_id" readonly="1"/>
                        </group>
                        <group/>
                    </group>
                </sheet>

                <footer>
                    <button name="action_confirm"
                            string="✓ Asignar Código"
                            type="object"
                            class="btn-primary"/>
                    <button name="action_cancel"
                            string="Cancelar"
                            type="object"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para abrir el wizard -->
    <record id="barcode_assign_wizard_action" model="ir.actions.act_window">
        <field name="name">Asignar Código de Barras</field>
        <field name="res_model">barcode.assign.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
