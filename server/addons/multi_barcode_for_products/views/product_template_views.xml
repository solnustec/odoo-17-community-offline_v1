<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--    Searching the product with multibarcode-->
    <record id="product_template_search_view" model="ir.ui.view">
        <field name="name">
            product.template.view.search.inherit.multi.barcode.for.products
        </field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <field name="name" position="replace">
                   <field name="name"
                       string="Producto"
                       filter_domain="['|', '|', '|',
                           ('default_code', 'ilike', self),
                           ('product_variant_ids.default_code', 'ilike', self),
                           ('name', 'ilike', self),
                           ('template_multi_barcode_ids.product_multi_barcode', 'ilike', self)
                       ]"/>
                </field>

                <field name="name" position="after">
                    <field name="template_multi_barcode_ids"
                           string="Codigo de Barras"
                            filter_domain="[
                          ('template_multi_barcode_ids.product_multi_barcode', 'ilike', self)
                       ]"/>
                    </field>
            </field>
    </record>

    <!-- Vista para agregar pestaña de barcodes en product.template -->
    <record id="product_template_form_view_barcode" model="ir.ui.view">
        <field name="name">
            product.template.view.form.multi.barcode.for.products
        </field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Agregar pestaña de barcodes después de información general -->
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Códigos de Barras"
                      name="multi_barcodes"
                      invisible="product_variant_count > 1">
                    <group string="Códigos de Barras Alternativos">
                        <field name="template_multi_barcode_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="product_multi_barcode" string="Código de Barras"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
