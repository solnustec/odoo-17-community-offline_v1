<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista especÃ­fica para actividades de encuesta -->
    <record id="view_survey_activity_form" model="ir.ui.view">
        <field name="name">mail.activity.survey.form</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail.mail_activity_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" invisible="res_model != 'in.survey.campaign.assignment'">
                    <button name="action_open_survey_from_activity" 
                            type="object" 
                            string="Responder Encuesta" 
                            class="btn-primary" 
                            context="{'from_activity': True}"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo> 