                                                    <thead>
                                                        <tr style="background-color: #f8f9fa; border: 1px solid #ddd;">
                                            <t t-foreach="length" t-as="length">
                                                                <th style="border: 1px solid #ddd; padding: 8px; text-align: center; font-weight: bold; vertical-align: middle;">
                                                    <span t-out="record['header'][length]"/>
                                                </th>
                                            </t>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="record['data']" t-as="rec">
                                                            <!-- Solo mostrar filas que contengan el nombre de la campa침a -->
