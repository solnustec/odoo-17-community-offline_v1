                                                <t t-foreach="length" t-as="ln">
                                                                        <td style="border: 1px solid #ddd; padding: 8px; text-align: center;">
                                                        <span t-out="rec[ln]"/>
                                                    </td>
                                                </t>
                                            </tr>
                                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                                        </t>
                                        
                        </div>
                                </t>
                            </t>
                        </t>

                        <!-- Observations Section -->
                        <t t-if="record.get('observations')">
                            <div style="margin-top: 20px;">
