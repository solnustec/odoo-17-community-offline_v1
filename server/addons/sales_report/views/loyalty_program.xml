<odoo>
    <record id="loyalty_program_form_inherit_archived_rewards" model="ir.ui.view">
        <field name="name">loyalty.program.form.inherit.archived.rewards</field>
        <field name="model">loyalty.program</field>
        <field name="inherit_id" ref="loyalty.loyalty_program_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group
                    string="Recompensas archivadas"
                    groups="base.group_no_one"
                    col="2">
                    <field name="archived_discount_reward_info" readonly="1" invisible="program_type not in ('promotion','loyalty','coupons')"/>
                    <field name="archived_temporary_discount_reward_info" readonly="1" invisible="program_type not in ('promotion','loyalty')"/>
                    <field name="archived_second_discount_reward_info" readonly="1" invisible="program_type not in ('promotion','loyalty')"/>
                    <field name="archived_product_reward_info" readonly="1" invisible="program_type not in ('promotion','loyalty')"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>