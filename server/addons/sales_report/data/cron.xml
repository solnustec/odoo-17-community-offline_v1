    <record id="cron_sync_promotions" model="ir.cron">
        <field name="name">Sincronizar Promociones a VisualFact</field>
        <field name="model_id" ref="model_loyalty_sync"/>
        <field name="state">code</field>
        <field name="code">model.cron_sync_loyalty_programs()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
